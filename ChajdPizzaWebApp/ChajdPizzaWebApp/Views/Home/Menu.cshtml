        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="~/css/BttnCS.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

        <script>
            $(document).ready(function () {
                $.ajax({
                contentType: 'application/json',
                type: "GET",
                url: "/api/PizzaTypesApi/Special",

                    success: function (data) {
                        if (data.length > 0) {       
                        $.each(data, function () {
                            var li = '<figure style="border-style:solid"><img src="/image/special' + this.id + '.jpg" alt="Second Slide" style="height:133px;width:175px"><h4 style="text-emphasis-color:blueviolet"><b>' + this.name + '</b></br> Price: $' + this.price + '</h4><figcaption><p>' + this.description + '</p><a class="btn btn-info" role="button" href="/SpecialtyPizza/Order/' + this.id + '">Order Now</a></figcaption></figure></br>';
                            $('#specialtyPizzas').append(li);
                        });
                    }
                },
                    error: function (data) {
                    alert("fail");
                    failure(data);
                }
            });


            });



        </script>







    </head>



    
<h3 style="text-align:center">Our Menu</h3>
<div>
    <a class="btn btn-info" role="" asp-action="CustomPizza" >Make Your Own</a> <br />
</div>
