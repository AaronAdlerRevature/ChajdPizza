    <form asp-action="CustomPizza" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @await Html.PartialAsync("../Shared/SizeView.cshtml", Model.Sizes)
        <p style="font-size:36px; color:brown; text-align:center"><b><u> Please Select the toppings($1.50 per)</u></b></p>
        <div class="form-group">

            @foreach (var item in Model.Toppings)
            {
                <label for="checkbox" class="form-control-label col-md-2"><b>@Html.DisplayFor(modelItem => item.Name) </b></label>

                <input type="checkbox" asp-for=@Model.selectedToppings name="Toppings" checked data-toggle="toggle" value=@item.Name data-on="Yes" data-off="No" data-onstyle="success" data-offstyle="danger">
            }
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Add to Order" asp-controller="Home" asp-action="CustomPizza" class="btn btn-primary" />
            </div>
            @*<button class=" btn-outline-warning" type="submit"  asp-action="CustomPizza" >Add to Order</button>*@
        

    </form>





